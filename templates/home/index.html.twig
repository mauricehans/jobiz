{% extends 'base.html.twig' %}

{% block title %}Welcome to Jobiz{% endblock %}

{% block body %}
<div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Find Your Dream Job</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Jobiz connects talented professionals with amazing companies. Browse through our curated list of opportunities and take the next step in your career.
    </p>
</div>

<section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Latest Job Opportunities</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for job in latest_jobs %}
            <div class="card">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ job.title }}</h3>
                <p class="text-gray-600 mb-4">{{ job.company.name }}</p>
                <div class="mb-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        {{ job.jobType.name }}
                    </span>
                    {% if job.remoteAllowed %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                            Remote
                        </span>
                    {% endif %}
                </div>
                <div class="text-sm text-gray-500 mb-4">
                    <p>{{ job.city }}, {{ job.country }}</p>
                    <p>{{ job.salaryMin|number_format }} - {{ job.salaryMax|number_format }} USD</p>
                </div>
                <a href="{{ path('app_jobs_show', {id: job.id}) }}" class="btn btn-primary block text-center">
                    View Details
                </a>
            </div>
        {% endfor %}
    </div>
    <div class="text-center mt-8">
        <a href="{{ path('app_jobs') }}" class="btn btn-secondary">
            View All Jobs
        </a>
    </div>
</section>
{% endblock %}