{% extends 'base.html.twig' %}

{% block title %}Welcome to Jobiz - Find Your Dream Tech Job{% endblock %}

{% block body %}
    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
            <div class="text-center mb-12">
                <h1 class="text-4xl font-bold text-primary mb-4">Welcome to Jobiz</h1>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Your premier platform for tech professionals and companies. Find your dream job in technology or post your opportunities to attract the best talent.
                </p>
            </div>

            <div class="mt-12">
                <h2 class="text-2xl font-semibold text-secondary mb-6">Latest Job Opportunities</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {# This section will be populated with actual job listings once we have the database set up #}
                    <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
                        <h3 class="text-lg font-semibold text-primary mb-2">Senior Web Developer</h3>
                        <p class="text-gray-600 mb-4">Looking for an experienced web developer to join our team...</p>
                        <a href="#" class="text-primary hover:text-primary-dark">Learn more →</a>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
                        <h3 class="text-lg font-semibold text-primary mb-2">Data Scientist</h3>
                        <p class="text-gray-600 mb-4">Join our data team to work on exciting machine learning projects...</p>
                        <a href="#" class="text-primary hover:text-primary-dark">Learn more →</a>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
                        <h3 class="text-lg font-semibold text-primary mb-2">DevOps Engineer</h3>
                        <p class="text-gray-600 mb-4">Help us build and maintain our cloud infrastructure...</p>
                        <a href="#" class="text-primary hover:text-primary-dark">Learn more →</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 