{% extends 'base.html.twig' %}

{% block title %}Connexion à Jobiz{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-[60vh]">
    <div class="bg-gray-800 p-8 rounded shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-teal-400 text-center">Connexion à Jobiz</h1>
        <form method="post">
            <div class="mb-4">
                <label for="inputEmail" class="block mb-1 text-gray-200">Adresse email</label>
                <input type="email" id="inputEmail" name="_username" required autofocus class="w-full px-4 py-2 rounded bg-gray-700 text-gray-100 border-none focus:ring-2 focus:ring-teal-500"/>
            </div>
            <div class="mb-6">
                <label for="inputPassword" class="block mb-1 text-gray-200">Mot de passe</label>
                <input type="password" id="inputPassword" name="_password" required class="w-full px-4 py-2 rounded bg-gray-700 text-gray-100 border-none focus:ring-2 focus:ring-teal-500"/>
            </div>
            <button type="submit" class="w-full bg-teal-600 hover:bg-teal-700 text-white font-semibold py-2 rounded">Se connecter</button>
        </form>
    </div>
</div>
{% endblock %} 